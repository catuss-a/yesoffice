%header.navbar.navbar-inverse.navbar-fixed-top{role:'banner'}
  - if current_user
    #menu-folder
      .btn-icon
        %i.icon-reorder
  .navbar-header
    %a.navbar-brand{href:root_path}
      = image_tag("yesoffice/logo_yesoffice.png", style:'height:30px;')
  - if current_user
    %ul.nav.navbar-nav.pull-right.hidden-xs.hidden-sm
      %li.dropdown
        %a.dropdown-toggle.dropdown-user{href:'#', data:{toggle:'dropdown'}}
          = image_tag('http://www.gravatar.com/avatar/00000000000000000000000000000000?size=30x30')
          = current_user.full_name
          &nbsp;
          %b.caret
        %ul.dropdown-menu
          %li= link_to 'Déconnexion', destroy_user_session_path, method: :delete
      /[if lt IE 10]
        %li.dropdown
          = link_to 'Déconnexion', destroy_user_session_path, method: :delete